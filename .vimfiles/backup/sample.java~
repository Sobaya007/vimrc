int[] enemyX;
int[] enemyY;
int[] enemyHP;

for (int i = 0; i < 100; i++) {
  g.drawRect(enemyX[i], enemyY[i], 10,10);
  enemyHP[i]--;
  if (enemyHP[i] == 0) {
    System.out.println("DEAD");
  }
}

class Enemy {
  int x, y;
  int hp;

  void draw(Graphics2D g) {
    g.drawRect(x,y,10,10);
  }

  void damage() {
    hp--;
    if (hp == 0) {
      System.out.println("DEAD");
    }
  }
}

Enemy[] enemies;

for (int i = 0; i < 100; i++) {
  enemies[i].draw(g);
  enemies[i].damage();
}
