module player.Constant;

import sbylib;

enum mass = 0.1;
enum recursionLevel = 2;
enum timeStep = 0.02;
enum zeta = 0.8;
enum omega = 10;
enum friction = 0.3;
enum gravity = 180;
enum baloon_coefficient = 2000;
enum faceNum = 20 * 4^^recursionLevel;
enum c = 2 * zeta * omega * mass;
enum k = mass * omega * omega;
enum velocity_coefficient = 1 / (1+timeStep*c/mass+timeStep*timeStep*k/mass);
enum position_coefficient = - (timeStep*k/mass) / (1+timeStep*c/mass+timeStep*timeStep*k/mass);
enum force_coefficient = (timeStep/mass) / (1+timeStep*c/mass+timeStep*timeStep*k/mass);
enum down_push_force = 800;
enum side_push_force = 400;
