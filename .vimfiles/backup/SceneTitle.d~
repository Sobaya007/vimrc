module scene.SceneTitle;

import scene.imports;

class SceneTitle : SceneBase {
	mixin singleton!();

	private {
		int upButtonCount;
		int downButtonCount;
		int enterButtonCount;
		bool nextSceneFlag;

		enum MENU {
			NEW_GAME,
			CONTINUE,
			EXIT
		}
	}

	private this() {}

	override void init() {
		writeln("init SceneTitle"); //
		upButtonCount = 0;
		downButtonCount = 0;
		enterButtonCount = 10; // 適当に大きな数
		nextSceneFlag = false;
	}

	override Scene update() {
		inputUpdate();
		selectUpdate();
		return SceneGame(); //

		return null;
	}

private:
	void inputUpdate() {
		if (Input.pressed(KeyButton.Up)) {
			upButtonCount++;
		} else {
			upButtonCount = 0;
		}
		if (Input.pressed(KeyButton.Down)) {
			downButtonCount++;
		} else {
			downButtonCount = 0;
		}
		if (Input.pressed(KeyButton.Enter)) {
			enterButtonCount++;
		} else {
			enterButtonCount = 0;
		}
	}

	void selectUpdate() {

	}
}