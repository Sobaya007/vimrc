module player.PlayerCollisionManager;

import std.container;
import collision;
import player.Player;
import player.PlayerCollisionObject;
import sbylib;

class PlayerCollisionManager {
  private PlayerCollisionObject obj;

  this(Player player, Octree octree) {
    obj = new PlayerCollisionObject(player);
    obj.setOctree(octree);
    obj.addToOctree();
  }

  void setListener(void delegate(Array!CollisionInfo) listener) {
    obj.listener = listener;
  }

  void setUserData(void *data) {
    obj.userData = data;
  }

  PlayerCollisionObject getObject() {
    return obj;
  }

}
