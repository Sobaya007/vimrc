module sbylib.math.Utils;

import std.math;
import sbylib.math;

U toRad(U)(U angle) {
	return angle * PI / 180;
}

U toDeg(U)(U angle) {
	return angle * 180 / PI;
}
vec3 ftot(vec4 v) {
	return vec3(v[0],v[1],v[2]);
}

vec4 ttof(vec3 v) {
	return vec4(v[0],v[1],v[2],1);
}

float sup(float t,float limit, float t0 = 0, float speed = 1) {
	return limit + speed / (t - speed / (limit - t0));
}